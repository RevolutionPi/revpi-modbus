#!/bin/sh

set -e

case "$1" in
    configure)
        # Try reloading firewall so the firewalld service definition is picked up
        firewall-cmd --reload >/dev/null 2>&1 || true
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
